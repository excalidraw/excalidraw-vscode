    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch extension",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionDevelopmentKind=web",
                "${workspaceFolder}/../examples"
            ],
            "outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
            "debugWebWorkerHost": true,
            "preLaunchTask": "build"
        }
    ]
}
