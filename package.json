{
    "name": "excalidraw-editor",
    "icon": "assets/logo.png",
    "displayName": "Excalidraw Editor",
    "description": "Draw schemas in VSCode using Excalidraw (Unofficial)",
    "version": "2.0.10",
    "publisher": "pomdtr",
    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Visualization"
    ],
    "keywords": [
        "draw",
        "schemas",
        "graphics",
        "paint"
    ],
    "author": {
        "name": "pomdtr",
        "email": "achille.lacoin@gmail.com",
        "url": "https://github.com/pomdtr"
    },
    "activationEvents": [
        "onCustomEditor:editor.excalidraw"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/pomdtr/vscode-excalidraw-editor"
    },
    "browser": "./dist/extension.js",
    "contributes": {
        "configuration": [
            {
                "title": "Excalidraw",
                "properties": {
                    "excalidraw.autoSave": {
                        "type": "boolean",
                        "description": "Controls autoSave of excalidraw editors.",
                        "default": false
                    },
                    "excalidraw.syncTheme": {
                        "scope": "resource",
                        "description": "Sync Excalidraw theme with VSCode color theme.",
                        "type": "boolean",
                        "default": "false"
                    }
                }
            }
        ],
        "customEditors": [
            {
                "viewType": "editor.excalidraw",
                "displayName": "Excalidraw Editor",
                "selector": [
                    {
                        "filenamePattern": "*.excalidraw"
                    },
                    {
                        "filenamePattern": "*.excalidraw.svg"
                    }
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "package": "npm run build-excalidraw && webpack --mode production --devtool hidden-source-map",
        "build-excalidraw": "rm -rf media && cd ./excalidraw && npm run build && mv build ../media",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "test-compile": "tsc -p ./"
    },
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": true
        }
    },
    "devDependencies": {
        "@types/minimatch": "^3.0.4",
        "@types/node": "^15.3.0",
        "@types/vscode": "^1.56.0",
        "@typescript-eslint/eslint-plugin": "^4.23.0",
        "@typescript-eslint/parser": "^4.23.0",
        "eslint": "^7.26.0",
        "ts-loader": "^9.2.8",
        "typescript": "^4.2.4",
        "webpack": "^5.70.0",
        "webpack-cli": "^4.9.2"
    },
    "dependencies": {
        "js-base64": "^3.7.2",
        "path-browserify": "^1.0.1"
    }
}
